<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ImageButton
        android:id="@+id/btnBackHome"
        android:layout_width="49dp"
        android:layout_height="38dp"
        android:background="@color/white"
        app:srcCompat="@drawable/back"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="66dp" />

    <Button
        android:id="@+id/btnCreateCategory"
        android:layout_width="131dp"
        android:layout_height="54dp"
        android:text="Create a Goal"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="195dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="131dp"
        android:layout_height="54dp"
        android:text="Create a Category"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="195dp" />

    <TextView
        android:id="@+id/hello_tshia"
        android:layout_width="256dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-black"
        android:gravity="top"
        android:text="@string/hello_tshia"
        android:textAppearance="@style/hello_tshia"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="112dp" />

    <TextView
        android:id="@+id/no_categori"
        android:layout_width="198dp"
        android:layout_height="61dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal|top"
        android:text="@string/no_categori"
        android:textAppearance="@style/no_categori"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="335dp" />

    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:srcCompat="@drawable/ic_menu"
        tools:layout_editor_absoluteX="371dp"
        tools:layout_editor_absoluteY="120dp" />

</androidx.constraintlayout.widget.ConstraintLayout>